@*@model IEnumerable<Borrows.Models.BorrowDb>*@
@model Borrows.Controllers.BorrowDbsController

@{
    ViewData["Title"] = "Index";
}



<h2>Borrow System</h2>

<p class="col-12" style="text-align:right;margin-right:10px;">
    <a asp-action="Create"><i class="fa fa-plus-circle" title="สร้างใบยืมใหม่"></i>สร้างใบยืมใหม่</a>
</p>
<div class="col-md-12">
    <div class="box">
        <div class="box-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.borrowdb.ServiceCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.borrowdb.CustomerName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.borrowdb.ProductId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.borrowdb.SerialNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.borrowdb.RequestName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.borrowdb.RequestDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.borrowdb.BorrowStatus)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model._context.BorrowDb)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServiceCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SerialNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RequestName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RequestDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BorrowStatus)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.BorrowId" title="แก้ไข"><i class="fa fa-edit"></i></a>|
                                <a asp-action="Details" asp-route-id="@item.BorrowId" title="ดุรายละเอียด"><i class="fa fa-info"></i></a>|
                                <a asp-action="Delete" asp-route-id="@item.BorrowId" title="ลบ"><i class="fa fa-trash"></i></a>|
                                <a asp-action="Confirm" asp-route-id="@item.BorrowId" title="ยืนยัน"><i class="fa fa-exchange"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


