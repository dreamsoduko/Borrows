@model Borrows.Models.BorrowDb

@{
    ViewData["Title"] = "Create";
}

<h2 style="margin-left:20px">Create</h2>

<h4 style="margin-left:20px">BorrowDb</h4>
<hr />
<div class="row" style="margin-left:20px">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ServiceCode" class="control-label"></label>
                <input asp-for="ServiceCode" class="form-control" placeholder="กรอก ServiceCode" id="SVid" name="SV" value="@ViewBag.SV" /><input type="submit" value="check" /><i class="fa fa-search"></i>
                <span asp-validation-for="ServiceCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" placeholder="..." name="CustName" value="@ViewBag.Customer" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <input asp-for="ProductId" class="form-control" name="ProdId" value="@ViewBag.Product" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SerialNo" class="control-label"></label>
                <input asp-for="SerialNo" class="form-control" name="SerialNo" value="@ViewBag.Serial" />
                <span asp-validation-for="SerialNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntryName" class="control-label"></label>
                <input asp-for="EntryName" class="form-control" name="Entryname" value="@ViewBag.User" />
                <span asp-validation-for="EntryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntryDate" class="control-label"></label>
                <input asp-for="EntryDate" class="form-control" />
                <span asp-validation-for="EntryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestName" class="control-label"></label>
                <select asp-for="RequestName" class="form-control">
                    @foreach (var item in ViewBag.GroupList)
                    {
                        <option value="@item.EmpCode">[@item.EmpCode] @item.FirstName @item.LastName</option>
                    }
                </select>
                <span asp-validation-for="RequestName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestDate" class="control-label"></label>
                <input asp-for="RequestDate" class="form-control" />
                <span asp-validation-for="RequestDate" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="BorrowStatus" class="form-control" value="New" />
